             x:Class="Exercises.Pages.aboutPage"
             Title="O aplikaci">
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="20" CornerRadius="8">
                <StackLayout>
                    <Label Text="Aplikace pro procvičování uživatelem vytvořených cvičení."/>
                    <Label Text="Účel aplikace je zefektivnit proces učení nového učiva."/>
                    <Label Text="Pokud se vám aplikace líbí, pošlete mi pěkný e-mail na adresu: janpalka4@gmail.com"/>
                </StackLayout>
            </Frame>
            <Label Text="{StaticResource Key=CopyrightNotice}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>